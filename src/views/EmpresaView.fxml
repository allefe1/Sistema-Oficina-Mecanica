<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>

<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.EmpresaViewController">
    <Label text="Informações da Empresa" style="-fx-font-size: 16px; -fx-font-weight: bold;" AnchorPane.leftAnchor="10" AnchorPane.topAnchor="10"/>
    
    <GridPane hgap="10" vgap="10" AnchorPane.leftAnchor="10" AnchorPane.topAnchor="40">
        <Label text="Nome:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="nomeField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
        
        <Label text="CPF/CNPJ:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="cpfCnpjField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
        
        <Label text="Telefone:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="telefoneField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
        
        <Label text="Endereço:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="enderecoField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
    </GridPane>
    
    <Button text="Salvar" onAction="#salvarEmpresa" AnchorPane.leftAnchor="10" AnchorPane.topAnchor="250"/>
</AnchorPane>
